from tkinter import *
from tkinter import ttk

#cores

cor1 = "#0d0d0d"
cor2 = "#ffffff"
cor3 = "#afb3b0"

janela = Tk()
janela.title("Cau√£-PY")
janela.geometry("235x368")
janela.config(bg=cor2)

#criando frames

frame_tela = Frame(janela, width=235, height=50, bg=cor2)
frame_tela.grid(row=0, column=0)
frame_corpo = Frame(janela, width=235, height=368)
frame_corpo.grid(row=1, column=0)

#criando label

valor_texto = StringVar()
app_label = Label(frame_tela, textvariable=valor_texto, width=16, anchor="e", justify=RIGHT, bg=cor2, fg=cor1, font="Ivy 18")
app_label.place(x=0, y=0)

#todos valores

todos_valores = ""

#funcao

def entrar_valores(event):

global todos_valores

todos_valores = todos_valores+str(event)

valor_texto.set(todos_valores)
#calcular

def calcular():

global todos_valores

resultado=eval(todos_valores)

valor_texto.set(str(resultado))
#limpar tela

